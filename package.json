{
  "name": "git-jenkins",
  "version": "1.0.0",
  "description": "Sample project for Jenkins integration and CI workflow with Jest artifact upload",
  "main": "index.js",
 "scripts": {
  "test": "jest --passWithNoTests"
},
  "author": "Komal Turakannavar",
  "license": "MIT",
  "devDependencies": {
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputName": "test-results.xml"
        }
      ]
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ]
  }
}
